<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
    <a class="navbar-brand" href="#">Staff App</a>
    <ul class="navbar-nav ms-3">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Employees" asp-action="Index">List of employees</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Employees" asp-action="Create">Add an employee</a>
        </li>
    </ul>
</nav>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-auto">
        &copy; Elise 2025
    </footer>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js" asp-fallback-src="/jquery/jquery.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
